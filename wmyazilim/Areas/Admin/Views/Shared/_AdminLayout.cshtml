<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        :root {
            --sidebar-width: 260px;
        }

        body {
            background-color: #f8f9fa;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            background: #0b1220;
            color: white;
            transition: all 0.3s;
            z-index: 1000;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 2rem;
        }

        .nav-link-admin {
            color: rgba(255,255,255,0.7);
            padding: 0.8rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 10px;
            text-decoration: none;
            transition: 0.3s;
        }

            .nav-link-admin:hover, .nav-link-admin.active {
                color: white;
                background: rgba(255,255,255,0.1);
                border-left: 4px solid var(--primary);
            }

        .admin-card {
            background: white;
            border: none;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        }
    </style>
</head>
<body>
    <aside class="sidebar">
        <div class="p-4 border-bottom border-secondary mb-3">
            <h5 class="fw-bold mb-0">WM Admin</h5>
        </div>
        <nav>
            <a href="/Admin/Home/Index" class="nav-link-admin">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>
            <a href="/Admin/Products" class="nav-link-admin">
                <i class="bi bi-box-seam"></i> Ürün Yönetimi
            </a>
            <a href="/Admin/DemoRequests" class="nav-link-admin">
                <i class="bi bi-envelope-paper"></i> Demo Talepleri
            </a>
            <div class="mt-5 p-3">
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-outline-light btn-sm w-100">
                    <i class="bi bi-box-arrow-left"></i> Siteye Dön
                </a>
            </div>
        </nav>
    </aside>

    <main class="main-content">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="fw-bold">@ViewData["Title"]</h2>
            <div class="user-info d-flex align-items-center gap-3">
                <span class="text-muted small">Hoşgeldin, Admin</span>
                <div class="bg-primary rounded-circle" style="width:35px; height:35px;"></div>
            </div>
        </header>
        @RenderBody()
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>