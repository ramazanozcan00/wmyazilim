@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>Admin Girişi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body class="admin-theme admin-login-body">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">
                <div class="text-center mb-4">
                    <div class="d-inline-flex align-items-center justify-content-center bg-primary text-white rounded-3 mb-3 shadow-lg" style="width: 50px; height: 50px;">
                        <i class="bi bi-shield-lock-fill fs-4"></i>
                    </div>
                    <h4 class="text-white fw-bold">Yönetici Paneli</h4>
                </div>

                <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                    <div class="card-body p-4 p-md-5">
                        <form action="/Admin/Account/Login" method="post">
                            <div class="form-floating mb-3">
                                <input type="text" name="Username" class="form-control bg-light border-0" placeholder="Kullanıcı Adı" required>
                                <label class="text-muted">Kullanıcı Adı</label>
                            </div>
                            <div class="form-floating mb-4">
                                <input type="password" name="Password" class="form-control bg-light border-0" placeholder="Şifre" required>
                                <label class="text-muted">Şifre</label>
                            </div>
                            <button type="submit" class="btn btn-primary btn-lg w-100 fw-bold py-3">Giriş Yap</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>