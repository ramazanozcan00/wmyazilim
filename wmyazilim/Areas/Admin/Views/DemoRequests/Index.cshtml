@model IEnumerable<wmyazilim.Models.DemoRequest>

<div class="container mt-4">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="bi bi-list-check me-2"></i> Demo Talepleri</h5>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Müşteri / Firma</th>
                        <th>İletişim</th>
                        <th>Tarih</th>
                        <th class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <strong>@item.FullName</strong><br />
                                <small class="text-muted">@item.CompanyName</small>
                            </td>
                            <td>
                                <i class="bi bi-telephone small text-primary"></i> @item.Phone<br />
                                <i class="bi bi-envelope small text-primary"></i> @item.Email
                            </td>
                            <td>@item.CreatedDate.ToShortDateString()</td>
                            <td class="text-center">
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-warning me-1">
                                    <i class="bi bi-pencil"></i> Düzenle
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"
                                   onclick="return confirm('Bu talebi silmek istediğinize emin misiniz?');">
                                    <i class="bi bi-trash"></i> Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>