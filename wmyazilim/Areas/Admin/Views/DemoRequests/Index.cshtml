@model IEnumerable<wmyazilim.Models.DemoRequest>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Demo Talepleri";
}

<div class="admin-card p-4">
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Ad Soyad</th>
                    <th>Firma</th>
                    <th>Telefon</th>
                    <th>E-posta</th>
                    <th>Tarih</th>
                    <th class="text-end">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><span class="fw-semibold">@item.FullName</span></td>
                        <td>@item.CompanyName</td>
                        <td><a href="tel:@item.Phone" class="text-decoration-none text-dark">@item.Phone</a></td>
                        <td>@item.Email</td>
                        <td class="text-muted small">@item.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                        <td class="text-end">
                            <button class="btn btn-sm btn-outline-primary"><i class="bi bi-eye"></i></button>
                            <button class="btn btn-sm btn-outline-danger"><i class="bi bi-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>