@model wmyazilim.Models.Product
@{
    ViewData["Title"] = "Ürünü Düzenle";
    Layout = "_AdminLayout";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card shadow-sm border-0 rounded-4">
            <div class="card-header bg-white p-4 border-bottom">
                <h5 class="fw-bold mb-0">Paketi Düzenle: <span class="text-primary">@Model.Title</span></h5>
            </div>
            <div class="card-body p-4">
                <form asp-action="Edit">
                    <input type="hidden" asp-for="Id" />

                    <div class="row g-3">
                        <div class="col-md-8">
                            <label asp-for="Title" class="form-label small fw-bold">Paket Adı</label>
                            <input asp-for="Title" class="form-control" required />
                        </div>
                        <div class="col-md-4">
                            <label class="form-label small fw-bold d-block">&nbsp;</label>
                            <div class="form-check form-switch p-2 border rounded bg-light">
                                <input class="form-check-input ms-0 me-2" type="checkbox" asp-for="IsPopular">
                                <label class="form-check-label fw-bold text-warning" asp-for="IsPopular">
                                    <i class="bi bi-star-fill"></i> Öne Çıkar
                                </label>
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="Description" class="form-label small fw-bold">Kısa Açıklama</label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="col-12">
                            <label asp-for="Slogan" class="form-label small fw-bold text-danger">Kampanya Sloganı</label>
                            <input asp-for="Slogan" class="form-control" placeholder="Örn: Yıllık planda 2 ay hediye!" />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="Price" class="form-label small fw-bold text-primary">Aylık Fiyat (₺)</label>
                            <input asp-for="Price" type="number" class="form-control" required />
                        </div>

                        <div class="col-md-6">
                            <label asp-for="PriceYearly" class="form-label small fw-bold text-success">Yıllık Fiyat (₺)</label>
                            <input asp-for="PriceYearly" type="number" class="form-control" required />
                        </div>

                        <div class="col-12">
                            <label asp-for="Features" class="form-label small fw-bold">Özellikler Listesi</label>
                            <textarea asp-for="Features" class="form-control font-monospace small" rows="4"></textarea>
                            <div class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Özellikleri ayırmak için <strong>|</strong> işareti kullanın.
                            </div>
                        </div>

                        <div class="col-12">
                            <label asp-for="ImageUrl" class="form-label small fw-bold">Resim URL</label>
                            <input asp-for="ImageUrl" class="form-control" />
                        </div>
                    </div>

                    <hr class="my-4">

                    <div class="d-flex gap-2 justify-content-end">
                        <a asp-action="Index" class="btn btn-light border px-4">İptal</a>
                        <button type="submit" class="btn btn-primary px-4 fw-bold">
                            <i class="bi bi-check-lg me-2"></i> Değişiklikleri Kaydet
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>