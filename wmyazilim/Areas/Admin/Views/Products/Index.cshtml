@model IEnumerable<wmyazilim.Models.Product>
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Ürün Yönetimi";
}

<div class="d-flex justify-content-end mb-4">
    <a asp-action="Create" class="btn btn-primary rounded-pill px-4">
        <i class="bi bi-plus-lg me-2"></i> Yeni Ürün Ekle
    </a>
</div>

<div class="row g-4">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-xl-4">
            <div class="admin-card p-3">
                <div class="d-flex gap-3">
                    <img src="@item.ImageUrl" class="rounded" style="width:80px; height:80px; object-fit:cover;">
                    <div class="flex-grow-1">
                        <h6 class="fw-bold mb-1">@item.Title</h6>
                        <p class="text-primary fw-bold mb-1">@item.Price.ToString("C2")</p>
                        <div class="d-flex gap-2 mt-2">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-light text-primary border"><i class="bi bi-pencil"></i> Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-light text-danger border"><i class="bi bi-trash"></i> Sil</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>