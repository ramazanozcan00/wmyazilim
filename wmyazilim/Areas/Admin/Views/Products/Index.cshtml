@model IEnumerable<wmyazilim.Models.Product>

@{
    ViewData["Title"] = "Ürün Yönetimi";
    Layout = "~/Views/Shared/_Layout.cshtml"; /* Ana tasarımı kullanır */
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📦 Ürün Listesi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-lg"></i> Yeni Ürün Ekle
        </a>
    </div>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Resim</th>
                <th>Ürün Adı</th>
                <th>Fiyat</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td style="width: 100px;">
                        <img src="@item.ImageUrl" class="img-thumbnail" style="max-height: 50px;" />
                    </td>
                    <td>@item.Title</td>
                    <td>₺@item.Price.ToString("N0")</td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-sm btn-danger"
                           onclick="return confirm('Bu ürünü silmek istediğinize emin misiniz?');">
                            Sil
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>