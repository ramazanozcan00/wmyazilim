@model dynamic
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Genel Bakış";
}

<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="admin-card p-4 border-start border-primary border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Toplam Ürün</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.ProductCount</h2>
                </div>
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle text-primary">
                    <i class="bi bi-box-seam fs-3"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-card p-4 border-start border-success border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Demo Talepleri</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.DemoCount</h2>
                </div>
                <div class="bg-success bg-opacity-10 p-3 rounded-circle text-success">
                    <i class="bi bi-envelope-paper fs-3"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-card p-4 border-start border-warning border-4">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h6 class="text-muted mb-1">Bugünkü Talepler</h6>
                    <h2 class="fw-bold mb-0">@ViewBag.TodayDemoCount</h2>
                </div>
                <div class="bg-warning bg-opacity-10 p-3 rounded-circle text-warning">
                    <i class="bi bi-clock-history fs-3"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <div class="admin-card p-4">
            <h5 class="fw-bold mb-4">Son Gelen Talepler</h5>
            <div class="table-responsive">
                <table class="table table-hover align-middle">
                    <tbody>
                        @foreach (var item in (List<wmyazilim.Models.DemoRequest>)ViewBag.RecentDemos)
                        {
                            <tr>
                                <td>
                                    <div class="fw-bold">@item.FullName</div>
                                    <small class="text-muted">@item.CompanyName</small>
                                </td>
                                <td>@item.Email</td>
                                <td class="text-end small">@item.CreatedDate.ToShortDateString()</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="admin-card p-4">
            <h5 class="fw-bold mb-4">Hızlı İşlemler</h5>
            <div class="d-grid gap-2">
                <a href="/Admin/Products/Create" class="btn btn-outline-primary text-start p-3 rounded-3">
                    <i class="bi bi-plus-circle me-2"></i> Yeni Ürün Ekle
                </a>
                <a href="/" target="_blank" class="btn btn-outline-secondary text-start p-3 rounded-3">
                    <i class="bi bi-eye me-2"></i> Siteyi Görüntüle
                </a>
            </div>
        </div>
    </div>
</div>