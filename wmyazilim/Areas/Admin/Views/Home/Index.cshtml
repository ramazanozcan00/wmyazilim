@model dynamic
@{
    Layout = "_AdminLayout";
    ViewData["Title"] = "Genel Bakış";
}

<div class="row g-4 mb-5">
    <div class="col-md-4">
        <div class="admin-stat-card d-flex align-items-center justify-content-between position-relative overflow-hidden">
            <div class="position-relative z-1">
                <p class="text-muted small fw-bold text-uppercase mb-1">Toplam Ürün</p>
                <h2 class="fw-bold display-6 mb-0 text-dark">@ViewBag.ProductCount</h2>
                <small class="text-success fw-medium"><i class="bi bi-arrow-up-short"></i> Aktif Satışta</small>
            </div>
            <div class="bg-primary bg-opacity-10 p-3 rounded-4 text-primary">
                <i class="bi bi-box-seam fs-2"></i>
            </div>
            <div class="position-absolute bottom-0 start-0 w-100 h-1 bg-primary"></div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-stat-card d-flex align-items-center justify-content-between position-relative overflow-hidden">
            <div class="position-relative z-1">
                <p class="text-muted small fw-bold text-uppercase mb-1">Toplam Talep</p>
                <h2 class="fw-bold display-6 mb-0 text-dark">@ViewBag.DemoCount</h2>
                <small class="text-primary fw-medium">Tüm Zamanlar</small>
            </div>
            <div class="bg-info bg-opacity-10 p-3 rounded-4 text-info">
                <i class="bi bi-envelope-paper fs-2"></i>
            </div>
            <div class="position-absolute bottom-0 start-0 w-100 h-1 bg-info"></div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="admin-stat-card d-flex align-items-center justify-content-between position-relative overflow-hidden">
            <div class="position-relative z-1">
                <p class="text-muted small fw-bold text-uppercase mb-1">Bugünkü Aktivite</p>
                <h2 class="fw-bold display-6 mb-0 text-dark">@ViewBag.TodayDemoCount</h2>
                <small class="text-warning fw-medium"><i class="bi bi-clock-history"></i> Son 24 Saat</small>
            </div>
            <div class="bg-warning bg-opacity-10 p-3 rounded-4 text-warning">
                <i class="bi bi-lightning-charge fs-2"></i>
            </div>
            <div class="position-absolute bottom-0 start-0 w-100 h-1 bg-warning"></div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4 h-100">
            <div class="card-header bg-white border-bottom border-light p-4 d-flex justify-content-between align-items-center">
                <h5 class="fw-bold mb-0">Son Gelen Demo Talepleri</h5>
                <a href="/Admin/DemoRequests" class="btn btn-light btn-sm text-muted">Tümünü Gör</a>
            </div>
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0" style="font-size: 0.95rem;">
                    <thead class="bg-light">
                        <tr>
                            <th class="ps-4 text-secondary text-uppercase small" style="font-weight: 600;">Müşteri Bilgisi</th>
                            <th class="text-secondary text-uppercase small" style="font-weight: 600;">İletişim</th>
                            <th class="text-secondary text-uppercase small" style="font-weight: 600;">Tarih</th>
                            <th class="text-end pe-4 text-secondary text-uppercase small" style="font-weight: 600;">Durum</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in (List<wmyazilim.Models.DemoRequest>)ViewBag.RecentDemos)
                        {
                            <tr>
                                <td class="ps-4 py-3">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex align-items-center justify-content-center fw-bold me-3" style="width: 40px; height: 40px;">
                                            @item.FullName.Substring(0, 1).ToUpper()
                                        </div>
                                        <div>
                                            <div class="fw-bold text-dark">@item.FullName</div>
                                            <small class="text-muted">@item.CompanyName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <span class="text-muted">@item.Email</span>
                                </td>
                                <td>
                                    <small class="text-muted">@item.CreatedDate.ToString("dd MMM yyyy")</small>
                                    <br />
                                    <small class="text-black-50" style="font-size: 0.75rem;">@item.CreatedDate.ToString("HH:mm")</small>
                                </td>
                                <td class="text-end pe-4">
                                    <span class="badge bg-soft-warning text-warning border border-warning border-opacity-25 rounded-pill px-3">Beklemede</span>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4 overflow-hidden mb-4">
            <div class="card-body p-4 bg-primary text-white position-relative">
                <div class="position-relative z-1">
                    <h5 class="fw-bold mb-2">Hızlı Ürün Ekle</h5>
                    <p class="text-white-50 small mb-4">Kataloğa yeni bir yazılım ürünü eklemek için tıklayın.</p>
                    <a href="/Admin/Products/Create" class="btn btn-white text-primary fw-bold w-100 shadow-sm">
                        <i class="bi bi-plus-lg me-2"></i> Yeni Ürün Oluştur
                    </a>
                </div>
                <div class="position-absolute top-0 end-0 opacity-25" style="transform: translate(20%, -20%);">
                    <i class="bi bi-box-seam" style="font-size: 10rem;"></i>
                </div>
            </div>
        </div>

        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white border-bottom border-light p-4">
                <h6 class="fw-bold mb-0">Kısayollar</h6>
            </div>
            <div class="list-group list-group-flush">
                <a href="/Admin/DemoRequests" class="list-group-item list-group-item-action p-3 d-flex align-items-center gap-3 border-light">
                    <div class="bg-info bg-opacity-10 text-info p-2 rounded-3">
                        <i class="bi bi-inbox"></i>
                    </div>
                    <div>
                        <span class="d-block fw-medium text-dark">Gelen Kutusu</span>
                        <small class="text-muted">Talepleri yönet</small>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                </a>
                <a href="/" target="_blank" class="list-group-item list-group-item-action p-3 d-flex align-items-center gap-3 border-light">
                    <div class="bg-success bg-opacity-10 text-success p-2 rounded-3">
                        <i class="bi bi-globe"></i>
                    </div>
                    <div>
                        <span class="d-block fw-medium text-dark">Canlı Site</span>
                        <small class="text-muted">Değişiklikleri gör</small>
                    </div>
                    <i class="bi bi-chevron-right ms-auto text-muted small"></i>
                </a>
            </div>
        </div>
    </div>
</div>