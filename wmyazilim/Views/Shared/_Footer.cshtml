@using wmyazilim.Data
@inject ApplicationDbContext _context
@{
    var footer = _context.FooterSettings.FirstOrDefault();
    // Eğer veritabanında footer yoksa hata vermesin diye boş nesne oluştur
    if (footer == null) footer = new wmyazilim.Models.FooterSetting();
}

<footer class="footer-premium pt-5 pb-4 mt-auto">
    <div class="container">
        <div class="row g-4 mb-5">
            <div class="col-lg-4">
                <a href="/" class="d-flex align-items-center gap-2 text-decoration-none mb-3">
                    <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center" style="width: 32px; height: 32px;">
                        <i class="bi bi-code-square"></i>
                    </div>
                    <span class="fw-bold fs-5 text-dark">WMYazılım</span>
                </a>
                <p class="text-secondary small" style="line-height: 1.7;">
                    @footer.Description
                </p>
                <div class="mt-3">
                    <p class="mb-1 small"><i class="bi bi-geo-alt me-2 text-primary"></i> @footer.Address</p>
                    <p class="mb-1 small"><i class="bi bi-envelope me-2 text-primary"></i> @footer.Email</p>
                    <p class="mb-0 small"><i class="bi bi-telephone me-2 text-primary"></i> @footer.PhoneNumber</p>
                </div>
            </div>

            <div class="col-6 col-lg-2 offset-lg-1">
                <h6 class="fw-bold mb-3 fs-6">Hızlı Erişim</h6>
                <ul class="list-unstyled d-flex flex-column gap-2 small">
                    <li><a href="/" class="text-decoration-none text-secondary">Anasayfa</a></li>
                    <li><a href="/#products" class="text-decoration-none text-secondary">Ürünler</a></li>
                    <li><a href="/#features" class="text-decoration-none text-secondary">Özellikler</a></li>
                </ul>
            </div>

            <div class="col-6 col-lg-2">
                <h6 class="fw-bold mb-3 fs-6">Destek</h6>
                <ul class="list-unstyled d-flex flex-column gap-2 small">
                    <li><a href="#" class="text-decoration-none text-secondary">S.S.S</a></li>
                    <li><a href="#" class="text-decoration-none text-secondary">Gizlilik Politikası</a></li>
                    <li><a href="#" class="text-decoration-none text-secondary">İletişim</a></li>
                </ul>
            </div>

            <div class="col-lg-3">
                <h6 class="fw-bold mb-3 fs-6">Haber Bülteni</h6>
                <p class="small text-secondary mb-3">Yeniliklerden haberdar olun.</p>
                <form class="d-flex gap-2">
                    <input type="email" class="form-control form-control-sm" placeholder="E-posta">
                    <button class="btn btn-primary btn-sm px-3" type="button">OK</button>
                </form>
            </div>
        </div>

        <div class="border-top pt-4">
            <div class="text-center">
                <p class="small text-muted mb-0">&copy; @DateTime.Now.Year @footer.CopyrightText</p>
            </div>
        </div>
    </div>
</footer>