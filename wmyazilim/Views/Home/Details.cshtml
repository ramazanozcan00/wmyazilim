@model wmyazilim.Models.Product

@{
    ViewData["Title"] = Model.Title;
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card border-0 shadow-sm">
                <img src="@Model.ImageUrl" class="card-img-top rounded" alt="@Model.Title">
            </div>
        </div>

        <div class="col-md-6">
            <h1 class="display-5 fw-bold text-primary">@Model.Title</h1>
            <div class="fs-3 fw-bold text-dark mb-3">
                ₺@Model.Price.ToString("N0")
            </div>

            <p class="lead">@Model.Description</p>

            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="d-inline">
                <input type="hidden" name="id" value="@Model.Id" />
                <button type="submit" class="btn btn-success btn-lg px-4">
                    <i class="bi bi-cart-fill"></i> Sepete Ekle
                </button>
            </form>

            <div class="mt-5 p-3 bg-light rounded border">
                <h5><i class="bi bi-check-circle-fill text-success"></i> Ürün Özellikleri:</h5>
                <ul class="list-unstyled mt-2">
                    <li>✓ Ömür Boyu Lisans</li>
                    <li>✓ Ücretsiz Kurulum Desteği</li>
                    <li>✓ 1 Yıl Güncelleme Garantisi</li>
                </ul>
            </div>
        </div>
    </div>
</div>