@model wmyazilim.Models.DemoRequest
@{
    ViewData["Title"] = "Demo Talebi Oluştur";
}

<section class="py-5 hero-section">
    <div class="container">
        <div class="row g-5 align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold mb-4">Ürünümüzü Yakından <span class="text-primary">Tanıyın</span></h1>
                <p class="lead text-muted mb-4">İşletmenizi dijital dünyada bir adım öne taşıyacak çözümlerimizi uzman ekibimizle keşfedin.</p>
            </div>

            <div class="col-lg-6">
                <div class="card-premium p-4 p-md-5 border-0 shadow-lg">
                    <h3 class="fw-bold mb-4">Demo Formu</h3>

                    <form asp-action="DemoRequest" method="post">
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="FullName" class="form-control bg-light border-0" placeholder="Ad Soyad" style="border-radius: 0.75rem;">
                            <label asp-for="FullName">Ad Soyad</label>
                            <span asp-validation-for="FullName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="CompanyName" class="form-control bg-light border-0" placeholder="Firma İsmi" style="border-radius: 0.75rem;">
                            <label asp-for="CompanyName">Firma İsmi</label>
                            <span asp-validation-for="CompanyName" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Phone" class="form-control bg-light border-0" placeholder="Telefon" style="border-radius: 0.75rem;">
                            <label asp-for="Phone">Telefon Numarası</label>
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="form-floating mb-4">
                            <input asp-for="Email" type="email" class="form-control bg-light border-0" placeholder="E-posta" style="border-radius: 0.75rem;">
                            <label asp-for="Email">E-posta Adresi</label>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-premium w-100 py-3 fs-5 shadow-sm">
                            <i class="bi bi-send-fill me-2"></i> Talebi Gönder
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>