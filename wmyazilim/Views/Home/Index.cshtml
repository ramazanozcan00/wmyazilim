@model IEnumerable<wmyazilim.Models.Product>
@{
    ViewData["Title"] = "Geleceğin Yazılım Çözümleri";
}

<section class="hero-section position-relative overflow-hidden">
    <div class="container">
        <div class="row align-items-center g-5">
            <div class="col-lg-6 text-center text-lg-start">
                <div class="badge badge-soft mb-3 animate__animated animate__fadeInDown">
                    <i class="bi bi-stars me-2"></i> Yeni Nesil Lisanslama Sistemi
                </div>
                <h1 class="display-3 fw-bold mb-4 animate__animated animate__fadeInUp">
                    İşinizi <span class="text-primary">Dijitalde</span> <br />Sınır Tanımadan Büyütün
                </h1>
                <p class="lead text-muted mb-5 animate__animated animate__fadeInUp">
                    WMYazılım ile karmaşık süreçleri otomatiğe bağlayın. Modern dashboard ve anında lisans teslimatı ile fark yaratın.
                </p>
                <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center justify-content-lg-start animate__animated animate__fadeInUp">

                    <a asp-controller="Home" asp-action="DemoRequest" class="btn btn-premium btn-lg shadow-lg">
                        <i class="bi bi-rocket-takeoff me-2"></i> Ücretsiz Demo İste
                    </a>

                    <a href="#products" class="btn btn-outline-dark btn-lg px-4" style="border-radius: 0.75rem;">
                        Ürünleri İncele
                    </a>
                </div>
            </div>

            <div class="col-lg-6 animate__animated animate__zoomIn">
                <div class="position-relative text-center">
                    <div class="mockup-container shadow-2xl rounded-4 overflow-hidden border bg-white">
                        <img src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?auto=format&fit=crop&q=80&w=1000"
                             class="img-fluid" alt="SaaS Dashboard Preview">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<section id="products" class="py-5 mt-5">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold display-5">Popüler Çözümlerimiz</h2>
        </div>

        <div class="row g-4">
            @if (Model != null)
            {
                @foreach (var item in Model)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card-premium h-100 d-flex flex-column">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                <img src="@item.ImageUrl" class="rounded-3 mb-4 w-100 object-fit-cover" style="height:200px;" alt="@item.Title">
                            }
                            <h4 class="fw-bold mb-3">@item.Title</h4>
                            <p class="text-muted small flex-grow-1">@item.Description</p>
                            <div class="mt-4 pt-4 border-top d-flex align-items-center justify-content-between">
                                <span class="fs-4 fw-bold text-dark">@item.Price.ToString("C2")</span>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-premium btn-sm px-4">
                                    İncele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<section class="py-5 my-5">
    <div class="container">
        <div class="card-premium bg-dark text-white p-5 text-center position-relative overflow-hidden">
            <div class="position-relative" style="z-index: 2;">
                <h2 class="display-5 fw-bold mb-3">Hala Kararsız mısınız?</h2>
                <p class="lead mb-4 opacity-75">Hemen ücretsiz bir demo talebi oluşturun, sistemi canlı görün.</p>

                <a asp-controller="Home" asp-action="DemoRequest" class="btn btn-premium btn-lg px-5">
                    Demo Talebi Başlat
                </a>

            </div>
        </div>
    </div>
</section>

@section Scripts {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}