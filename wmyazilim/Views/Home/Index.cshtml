@model List<wmyazilim.Models.Product>

@{
    ViewData["Title"] = "Ana Sayfa";
}

<div class="hero-section text-center mb-5 shadow-lg">
    <div class="container">
        <h1 class="display-3 fw-bold mb-3">İşletmenizi Geleceğe Taşıyın</h1>
        <p class="lead fs-4 text-white-50 mb-4">Profesyonel yazılım çözümleriyle süreçlerinizi hızlandırın, kârınızı artırın.</p>
        <div class="d-flex justify-content-center gap-3">
            <button class="btn btn-light btn-lg px-5 rounded-pill fw-bold text-primary shadow">
                <i class="bi bi-search"></i> Keşfet
            </button>
            <button class="btn btn-outline-light btn-lg px-5 rounded-pill fw-bold">
                <i class="bi bi-envelope"></i> İletişim
            </button>
        </div>
    </div>
</div>

<div class="container mb-5">
    <div class="d-flex align-items-center mb-4">
        <h2 class="fw-bold text-dark m-0"><i class="bi bi-stars text-warning"></i> Öne Çıkan Yazılımlar</h2>
        <div class="ms-auto">
            <a href="#" class="text-decoration-none fw-bold">Tümünü Gör <i class="bi bi-arrow-right"></i></a>
        </div>
    </div>

    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var product in Model)
        {
            <div class="col">
                <div class="card h-100 product-card shadow-sm">
                    <div class="product-img-wrapper position-relative">
                        <img src="@product.ImageUrl" alt="@product.Title">
                        <span class="position-absolute top-0 end-0 bg-success text-white px-3 py-1 m-3 rounded-pill small fw-bold shadow">
                            Yeni
                        </span>
                    </div>

                    <div class="card-body d-flex flex-column pt-4">
                        <h5 class="card-title fw-bold text-dark">@product.Title</h5>
                        <p class="card-text text-muted flex-grow-1 small">
                            @if(product.Description.Length > 80)
                            {
                                @product.Description.Substring(0, 80) <span class="text-primary">...</span>
                            }
                            else
                            {
                                @product.Description
                            }
                        </p>
                        
                        <div class="d-flex justify-content-between align-items-end mt-3">
                            <div>
                                <small class="text-muted d-block text-uppercase fw-bold" style="font-size: 0.7rem;">Lisans Fiyatı</small>
                                <span class="price-tag">₺@product.Price.ToString("N0")</span>
                            </div>
                            <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary-custom text-white text-decoration-none">
                                İncele <i class="bi bi-arrow-right-short"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<div class="container py-5">
    <div class="row text-center g-4">
        <div class="col-md-4">
            <div class="p-4 bg-white rounded-3 shadow-sm border h-100">
                <i class="bi bi-shield-check display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Güvenli Altyapı</h5>
                <p class="text-muted small">Tüm yazılımlarımız en güncel güvenlik protokolleri ile korunmaktadır.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white rounded-3 shadow-sm border h-100">
                <i class="bi bi-headset display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">7/24 Destek</h5>
                <p class="text-muted small">Uzman ekibimiz her türlü teknik sorunda yanınızdadır.</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="p-4 bg-white rounded-3 shadow-sm border h-100">
                <i class="bi bi-cloud-arrow-down display-4 text-primary mb-3"></i>
                <h5 class="fw-bold">Anında Kurulum</h5>
                <p class="text-muted small">Satın alma işleminden sonra yazılımınız saniyeler içinde hazır.</p>
            </div>
        </div>
    </div>
</div>